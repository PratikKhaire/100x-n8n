// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Workflow {
  id          String      @id @default(cuid())
  name        String
  nodes       Json // Stores the array of nodes from React Flow
  edges       Json // Stores the array of edges from React Flow
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  executions  Execution[] // A workflow can have many executions
}

model Execution {
  id          String    @id @default(cuid())
  workflow    Workflow  @relation(fields: [workflowId], references: [id])
  workflowId  String
  status      String // e.g., "Pending", "Success", "Failed"
  result      Json?     // Stores the final output of the workflow run
  createdAt   DateTime  @default(now())
}
